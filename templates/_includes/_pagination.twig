
{% block pagination %}
{% set currentListCount = currentList|length %}
	<section id="pagination">
		<div class="flex flex-col items-center">
			<div
				class="flex flex-row items-center">
				<!-- Previous Button -->
				{% if currentQuery.currentPage != 1 %}
					<a href="{{ currentQuery.prevUrl }}" class="inline-flex items-center px-4 py-2 mr-3 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-900 dark:border-gray-800 dark:text-gray-600 dark:hover:bg-gray-800 dark:hover:text-white">
						<svg aria-hidden="true" class="w-5 h-5 mr-2" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
						</svg>
						Prev
					</a>
				{% else %}
					<div class="inline-flex items-center px-4 py-2 mr-3 text-sm font-medium text-gray-200 bg-white border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400">
						<svg aria-hidden="true" class="w-5 h-5 mr-2" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
						</svg>
						Prev
					</div>
				{% endif %}
				<div class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500">
				Page {{ currentQuery.currentPage }} of {{ currentQuery.totalPages }} ({{ currentPerPage }} per page)
				</div>
				<!-- Next Button -->
				{% if currentQuery.currentPage != currentQuery.totalPages %}
<a href="{{ currentQuery.nextUrl }}" class="inline-flex items-center px-4  ml-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">

						Next
						<svg aria-hidden="true" class="w-5 h-5 ml-2" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
						</svg>
					</a>
				{% else %}
					<div class="inline-flex items-center px-4 py-2 ml-3 text-sm font-medium text-gray-200 bg-white border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400">
						Next
						<svg aria-hidden="true" class="w-5 h-5 mr-2" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
						</svg>
					</div>
				{% endif %}
			</div>
		</div>
	</section>
{% endblock %}