{% extends "index.twig" %}
{%~ block head %}
{{parent()}}{% endblock %}{% block body %}
{% block header %}
	{{parent()}}
{% endblock %}
{% block article %}
	<article class="xl:flex-grow self-center">

		{% set humanImage = entry.photos.one() %}
		{% set humanAdocFacility = entry.facility.one() %}
		{% set humanDOD = entry.dateOfStatus %}
		{% set humanNote = entry.note %}
		{% set humanAdocCOD = entry.causeOfDeath.one() %}
		{% set humanAdocReports = entry.reports.type('report') %}
		{% set human = entry %}
		{% set humanUrl = human.url %}
		{% set firstNFC = human.firstName | slice(0, 1) %}
		{% set lastNFC = human.lastName | slice(0, 1) %}
		{% set name = "" %}
		{% if human.lastName %}
			{% set name = human.lastName %}
		{% endif %}
		{% if human.firstName %}
			{% set name = name ~ ", " ~ human.firstName %}
		{% endif %}
		{% if human.nickName %}
			{% set name = name ~ " \"" ~ human.nickName ~ "\"" %}
		{% endif %}

		<section class="bg-white dark:bg-gray-900">
			<div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-8 grid-cols-7 xl:grid-cols-12">
				<div id="details" class="mr-auto place-self-center col-span-7">
					<h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white">
						{{entry.firstName}}
						{{entry.lastName}}</h1>
					{% if humanNote %}
						<p class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">
							<span class="font-bold uppercase">About
								{{entry.firstName}}:</span>
							{{humanNote}}
						</p>
					{% endif %}
					{% set callToActionEntries = craft.entries.section('callToAction')
						.relatedTo(human)
						.one() %}
					{% if callToActionEntries|length > 0 %}
					<div class="max-w-2xl w-full mb-2 p-4 bg-red-100 rounded-md flex-col justify-center items-start gap-3 inline-flex">
						<div class="flex-col justify-start items-start gap-1.5 flex">
							<div class="self-stretch justify-start items-center gap-2 inline-flex">
								<div class="grow shrink basis-0 text-red-800 text-base font-semibold leading-normal">Public Help Needed</div>
								<div class="w-5 h-5 relative"></div>
							</div>
							<div class="text-red-800 text-sm font-normal leading-[21px] pb-2">Status Date: {{callToActionEntries.dateOfStatus | date("Y-m-d") }}</div>
							<div class="text-red-800 text-sm font-normal leading-[21px]">{{callToActionEntries.note}}</div>
							

						</div>
						{% if humanAdocFacility|length %}
						<a href=" {{humanAdocFacility.url}} " class="px-3 no-underline py-2 bg-red-700 rounded-lg justify-center items-center gap-2 inline-flex">
						<div class="text-white text-xs font-medium leading-[18px]">Contact

							{{humanAdocFacility}}
							</div>
						</a>
						{% endif %}
						
						
					</div>
					{% endif %}

					<div class="px-5 pb-5">
						<p class="my-1 text-lg text-gray-500">
							<strong>AIS#
							</strong>
							{% if human.ais %}
								{{human.ais}}
							{% else %}
								<SPAN class="text-sm">UNKNOWN</SPAN>
							{% endif %}
						</p>
						<span class="text-gray-500 text-lg">
							<strong>Facility:
							</strong>
							{% if humanAdocFacility %}
								<a class="underline" href="{{ humanAdocFacility.url }}">{{ humanAdocFacility.title }}</a>
							{% else %}
								<SPAN class="text-sm">UNKNOWN</SPAN>
							{% endif %}
						</span>
						{# {% if humanNote %}
						<p class="my-2 font-light text-gray-500 dark:text-gray-400">
							<span class="font-medium">Details:
							</span>
								{{humanNote}}
						</p>
						{% endif %} #}
						{% if humanAdocCOD %}
						<p class="my-2 font-light text-gray-500 dark:text-gray-400">
							<span class="font-medium">COD:
							</span>
								{{humanAdocCOD}}
						</p>
						{% endif %}


						{% if humanAdocReports|length %}
							<h2 class="my-2 text-xl text-gray-500 dark:text-gray-400 font-bold">Reports</h2>
							<ul class="ml-4">
								{% for humanAdocReports in humanAdocReports %}
									<li class="list-decimal">
										{% set reportLink = humanAdocReports.reportLink %}
										{% if reportLink %}
											<a href="{{ reportLink }}">
												<span class="ml-2 mt-2 mb-1 font-light text-gray-500 dark:text-gray-400">{{ humanAdocReports.reportType.one().title }}</span>

											</a>
										{% else %}
											<span class="ml-2 mt-2 mb-1 font-light text-gray-500 dark:text-gray-400">{{ humanAdocReports.reportType.one().title }}</span>

										{% endif %}
									</li>
								{% endfor %}
							</ul>
						{% endif %}
					</div>


					<a href="{{ siteUrl }}humans" class="inline-flex items-center justify-center px-5 py-3 mr-3 text-base font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900">
						View All Humans
						<svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
						</svg>
					</a>
					{% if humanAdocFacility|length %}
						<a href=" {{humanAdocFacility.url}} " class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-center text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 dark:text-white dark:border-gray-700 dark:hover:bg-gray-700 dark:focus:ring-gray-800">
							View
							{{humanAdocFacility}}
						</a>
					{% endif %}
				</div>
				{# <div class=" xl:grid-cols-1"></div> #}
				{% if humanImage %}
					{% do humanImage.setTransform('crop450') %}
					<div id="image" class="hidden aspect-[450/450] lg:mt-0 lg:col-span-4 lg:flex">

						<img class="p-4 aspect-[450/450] rounded-lg border-2" src="{{ humanImage.url }}" width="{{ humanImage.width }}" height="{{ humanImage.height }}" alt="{{ humanImage.title }}">
					</div>
				{% endif %}
			</div>
		</section>
	</article>
{% endblock %}
{% block footer %}
	{{parent()}}
{% endblock %}{% endblock %}

